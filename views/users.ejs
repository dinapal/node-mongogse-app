<%- include('./partials/header.ejs') %> 
    <div class="container">
        <h1>All Listed User</h1>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                       <table class="table table-striped table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Sl No:</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(user){ for(let i = 0; i < user.length; i++){   %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= user[i].name %> </td>
                            <td><%= user[i].email %> </td>
                            <td>
                                <a href="/user/<%= user[i]._id  %> " class="btn btn-primary btn-sm">View/edit</a>
                                <a href="/delete/<%= user[i]._id  %> " class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>

                       <%} } %> 
                        </tbody>
                        
                       </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %> 
